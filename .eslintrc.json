{
    "root": true,
    "ignorePatterns": ["projects/**/*"],
    "overrides": [
      {
        "files": ["*.ts"],
        "extends": [
          "plugin:@angular-eslint/recommended",
          "plugin:prettier/recommended"
        ],
        "rules": {
          "quotes": ["error", "single"],
          "semi": ["error", "always"]
        }
      },
      {
        "files": ["*.html"],
        "extends": ["plugin:@angular-eslint/template/recommended"],
        "rules": {}
      }
    ]
  }
  